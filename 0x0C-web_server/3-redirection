#!/usr/bin/env bash
# redirection

SU=$(whoami)
PATH="/etc/nginx/sites-available/default"
LINK="https://www.youtube.com/watch?v=dQw4w9WgXcQ/"
LOCAL="/redirect_me"
REDIRECT="\tlocation ${LOCAL} {\n\t\treturn 301 ${LINK};\n\t}"

if [[ "$SU" == "root" ]];
then
        SU="sudo"
else
        echo "You need run with sudo"
        exit
fi

$SU apt-get -y update
$SU apt-get -y install nginx
$SU sed -i "/server_name _;/ a\\${REDIRECT}" $PATH
$SU service nginx restart
